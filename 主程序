int main()
{
	int i,j,k=1,yi,er;

	student stu[50];
	printf("**********学生档案管理系统**********\n");
	printf("*请输入以下对应的数字实现对应的功能*\n");
	printf("************************************\n");
	printf("*************1.主菜单***************\n");
	printf("*************2.退出本程序***********\n");
    printf("请输入您要执行的操作（输入数字）： ");
	scanf("%d",&yi); 
	switch(yi)
	{
		case 1:system("cls");break;
		default:printf("输入错误请退出后重试！！");exit(0);break; 
		case 2:printf("再次按空格键退出。\n");exit(0);
	}
	while(k==1)
	{printf("**********学生档案管理系统**********\n");
	printf("*请输入以下对应的数字实现对应的功能*\n");
	printf("*************1.输入数据*************\n");
	printf("*************2.修改数据*************\n");
	printf("*************3.增加数据*************\n");
	printf("*************4.插入数据*************\n");
	printf("*************5.删除数据*************\n");
	printf("*************6.查询数据*************\n");
	printf("*************7.排序数据*************\n");
	printf("*************8.输出数据*************\n");
    printf("请输入您要执行的操作（输入数字）： ");
	scanf("%d",&er); 
	switch(er)
	{
		case 1:
		{
			system("cls");
			printf("请输入本次要记录的数据总数(注意：本操作将会覆盖之前的数据请谨慎操作！)： ");
			scanf("%d",&yishuju); 
			input(stu,yishuju);
			break;
		} 
		case 2:
		{
			system("cls");
			printf("请输入要修改学生的学号： ");
			scanf("%d",&ershuju);
			change(stu,ershuju); 
			break; 
		}
		case 3:
		{
			system("cls");
		}
	}
	}

}
